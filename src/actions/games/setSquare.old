// src/actions/games/update.js
import API from '../../api/client'
import {
  APP_LOADING,
  APP_DONE_LOADING,
  LOAD_ERROR,
  LOAD_SUCCESS
} from '../loading'

export const SQUARE_SET = 'SQUARE_SET'

const api = new API()

export default (gameId, index) => {
  return (dispatch) => {
    dispatch({ type: APP_LOADING })

    api.patch(`/games/${gameId}`, {index})
      .then(() => {
        dispatch({ type: APP_DONE_LOADING })
        dispatch({ type: LOAD_SUCCESS })
      })
      .catch((error) => {
        dispatch({ type: APP_DONE_LOADING })
        dispatch({
          type: LOAD_ERROR,
          payload: error.message
        })
      })
  }
}
